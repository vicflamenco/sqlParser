        <div>

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#createDatabase" role="tab" data-toggle="tab">CREATE DATABASE</a></li>
                <li role="presentation"><a href="#dropDatabase" role="tab" data-toggle="tab">DROP DATABASE</a></li>
                <li role="presentation"><a href="#createTable" role="tab" data-toggle="tab">CREATE TABLE</a></li>
                <li role="presentation"><a href="#dropTable" role="tab" data-toggle="tab">DROP TABLE</a></li>
                <li role="presentation"><a href="#select" role="tab" data-toggle="tab">SELECT</a></li>
                <li role="presentation"><a href="#insert" role="tab" data-toggle="tab">INSERT</a></li>
                <li role="presentation"><a href="#update" role="tab" data-toggle="tab">UPDATE</a></li>
