@model SqlParserUdb.Models.ViewModels.ParserViewModel
@{
    ViewBag.Title = "Home Page";
}

<style>
    .boxsizingBorder {
    -webkit-box-sizing: border-box;
       -moz-box-sizing: border-box;
            box-sizing: border-box;
}
</style>

<h1>SQL Parser UDB</h1>
<div class="row">

    <div class="col-md-4">
        <div class="panel-group">
       

            @foreach (SqlParserUdb.Models.ViewModels.Database database in Model.Databases)
            {
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <a data-toggle="collapse" href="#@database.Name">
                            @database.Name
                        </a>
                    </div>
                    <div id="@database.Name" class="panel-collapse collapse">
                        <ul class="list-group">
                            @foreach (string table in database.Tables)
                            {
                                <li class="list-group-item">@table</li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>

