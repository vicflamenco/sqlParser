                <div role="tabpanel" class="tab-pane active" id="createDatabase">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @using (Html.BeginForm("ParseCreateDatabase", "Home", FormMethod.Post, new { @role = "form" }))
                            {
                                <div class="form-group">
                                    <label>
                                        SQL Script
                                    </label>
                                    <textarea required rows="6" class="form-control" id="textSqlScript" name="textSqlScript" style="width:100%; margin: 0;"></textarea>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Parse" class="btn btn-primary" />
                                </div>
                            }
